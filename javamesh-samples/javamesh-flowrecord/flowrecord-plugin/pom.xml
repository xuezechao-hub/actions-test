<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.huawei.javamesh</groupId>
        <artifactId>javamesh-flowrecord</artifactId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>flowrecord-plugin</artifactId>

    <properties>
        <package.sample.dir>${package.agent.dir}/plugins</package.sample.dir>
        <shade.distinct.prefix>com.lubanops.apm.dependencies.flowrecord</shade.distinct.prefix>
        <org.apache.curator.version>4.3.0</org.apache.curator.version>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>com.google</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.com.google</shadedPattern>
                                </relocation>
                                <relocation>
                                    <excludes>
                                        <exclude>com.alibaba.dubbo.*</exclude>
                                    </excludes>
                                    <pattern>com.alibaba</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.com.alibaba</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.github</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.com.github</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io.netty</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.io.netty</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io.lettuce</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.io.lettuce</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.io</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.bytebuddy</pattern>
                                    <shadedPattern>${shade.common.prefix}.net.bytebuddy</shadedPattern>
                                </relocation>
                                <relocation>
                                    <excludes>
                                        <exclude>net.bytebuddy.*</exclude>
                                    </excludes>
                                    <pattern>net</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.net</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>reactor</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.reactor</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>javax.annotation</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.javax.annotation</shadedPattern>
                                </relocation>
                                <relocation>
                                    <excludes>
                                        <exclude>org.apache.curator.*</exclude>
                                        <exclude>org.apache.kafka.*</exclude>
                                        <exclude>org.apache.dubbo.*</exclude>
                                        <exclude>org.apache.http.*</exclude>
                                        <exclude>org.springframework.*</exclude>
                                        <exclude>org.redisson.*</exclude>
                                    </excludes>
                                    <pattern>org</pattern>
                                    <shadedPattern>${shade.distinct.prefix}.org</shadedPattern>
                                </relocation>
                            </relocations>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>

        <dependency>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.8.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.skywalking</groupId>
            <artifactId>apm-jdbc-commons</artifactId>
            <version>8.1.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.redisson</groupId>
            <artifactId>redisson</artifactId>
            <version>3.15.2</version>
        </dependency>
        <dependency>
            <groupId>com.huawei.javamesh</groupId>
            <artifactId>javamesh-agentcore-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>RELEASE</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.skywalking</groupId>
            <artifactId>apm-agent-core</artifactId>
            <version>8.7.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.dubbo</groupId>
            <artifactId>dubbo-rpc-api</artifactId>
            <version>2.7.6</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.curator</groupId>
            <artifactId>curator-client</artifactId>
            <version>${org.apache.curator.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.alibaba</groupId>
            <artifactId>dubbo-rpc-api</artifactId>
            <version>2.6.8</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>8.0.21</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.curator</groupId>
            <artifactId>curator-framework</artifactId>
            <version>${org.apache.curator.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.curator</groupId>
            <artifactId>curator-recipes</artifactId>
            <version>${org.apache.curator.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.1.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.huawei.javamesh</groupId>
            <artifactId>javamesh-backend</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>

</project>